<h1>Sign Up</h1>

<%= form_with(model: @user, url: signup_path, local: true, data: { turbo: false }, html: { class: 'signup-form' }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :username, class: 'form-label' %>
    <%= f.text_field :username, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: 'form-input' %>
  </div>

  <%= f.submit "Sign Up", class: 'form-submit' %>

<% end %>
<div class="log-in">
  <p>Have an account? <a href="<%= login_path %>">Click here</a></p>
</div>

