<h1>Login</h1>

<%= form_with(url: login_path, local: true, data: { turbo: false }, html: { class: 'login-form' }) do |f| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username, class: 'form-label' %>
    <%= f.text_field :username, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: 'form-input' %>
  </div>

  <%= f.submit "Log In", class: 'form-submit' %>
<% end %>

<div class="sign-up">
  <p>Don't have an account? <a href="<%= signup_path %>">Click here</a></p>
</div>
