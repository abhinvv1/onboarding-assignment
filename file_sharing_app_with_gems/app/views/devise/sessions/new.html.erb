<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>

  <div class="field form-group">
    <%= f.label :username, class: 'form-label' %><br />
    <%= f.text_field :username, autofocus: true, class: 'form-input' %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me, class: 'form-check' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'form-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
