<h1>User Profile</h1>

<%= form_for(@user, url: profile_path, method: :patch, html: { class: 'edit-profile-form' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :username, class: 'form-label' %>
    <%= f.text_field :username, class: 'form-input' %>
    <% if @user.errors[:username].any? %>
      <span class="error"><%= @user.errors[:username].first %></span>
    <% end %>
  </div>
  <div class="field form-group">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-input' %>
    <% if @user.errors[:name].any? %>
      <span class="error"><%= @user.errors[:name].first %></span>
    <% end %>
  </div>
  <div class="field form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-input' %>
    <% if @user.errors[:email].any? %>
      <span class="error"><%= @user.errors[:email].first %></span>
    <% end %>
  </div>
  <%= f.submit 'Update Profile', class: 'form-submit' %>
<% end %>